
@{
    ViewBag.Title = "Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rentals</h2>

<div class="form-group">
    @Html.ActionLink("New Rental","New", "Rentals","null",new { @class = "btn btn-primary"})
</div>

<table id="rentals" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Customer</th>
        <th>Movie</th>
        <th>Rented On</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>

    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#rentals").DataTable({
                ajax: {
                    url: "/api/newrentals/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "customer.name"
                    },
                    {
                        data: "movie.name"
                    },
                    {
                        data: "dateRented"
                    },
                    {
                        data: "id",
                        orderable: false,
                        render: function (data) {
                            console.log(data);
                            return "<button class='btn-link js-delete' data-rental-id=" + data + "> Delete </button>";
                        }
                    }
                ]
            });


            $("#rentals").on("click",".js-delete",function() {
                var button = $(this);
                
                    bootbox.confirm("Are you sure you want to delete this record?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/newrentals/" + button.attr("data-rental-id"),
                                    method: "DELETE",
                                    success: function() {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                            });
                            }

                        });


                });
        });
    </script>

}
